#!/usr/bin/env python3
"""
SeqWeb Python CLI Implementation entry point
This file is made executable by the Universal entry point via chmod +x
"""

import sys
from pathlib import Path


# Add the src/python directory to Python path to access the CLI package
SEQWEBCODE_DIR = Path(__file__).parent
PYTHON_SRC_DIR = SEQWEBCODE_DIR / "src" / "python"
sys.path.insert(0, str(PYTHON_SRC_DIR))

# Import and run CLI
try:
    from cli.dispatcher import main
except ImportError as e:
    print(f"Error: Could not import seqwebdev CLI dispatcher: {e}")
    print("Looking for seqwebcode/src/python/cli/ directory...")
    sys.exit(1)

if __name__ == "__main__":
    main()
