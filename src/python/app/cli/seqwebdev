#!/usr/bin/env python3
"""
SeqWeb Python CLI Implementation entry point
This file is made executable by the Universal entry point via chmod +x
"""

import sys
from pathlib import Path

# Find and import foothold for environment setup
script_dir = Path(__file__).parent
foothold_path = script_dir.parent.parent / "lib" / "foothold"
sys.path.insert(0, str(foothold_path))

import foothold
foothold.setup_environment()

# Import and run CLI
try:
    # Now this import works because foothold set up the broad Python path
    from app.cli.chain.seqwebdev.seqwebdev import main  # type: ignore[import-unresolved]  ### NEW CHAINING CLI
except ImportError as e:
    print(f"Error: Could not import CLI main: {e}")
    sys.exit(1)

if __name__ == "__main__":
    main()
