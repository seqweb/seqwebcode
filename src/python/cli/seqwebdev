#!/usr/bin/env python3
"""
SeqWeb Python CLI Implementation entry point
This file is made executable by the Universal entry point via chmod +x
"""

import sys
from pathlib import Path

# Add the src/python directory to Python path so we can import our modules
script_dir = Path(__file__).parent
python_src_dir = script_dir.parent
sys.path.insert(0, str(python_src_dir))

# Import and run CLI
try:
    # Note: We use absolute import 'cli.dispatcher' instead of relative '.dispatcher'
    # because this file is run directly as a script, not imported as part of a package.
    # The sys.path manipulation above ensures Python can find the cli module.
    from cli.dispatcher import main  # type: ignore[import-unresolved]
except ImportError as e:
    print(f"Error: Could not import CLI main (from dispatcher.py): {e}")
    sys.exit(1)

if __name__ == "__main__":
    main()
